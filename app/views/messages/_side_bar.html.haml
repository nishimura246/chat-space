.side-bar
  .side-bar__user-name
    .side-bar__user-name__top-items
      = current_user.name
      .side-bar__user-name__top-items__name

      .side-bar__user-name__top-items__icons
        =link_to new_group_path do
          = icon('far', 'edit', class:"btn--icon")
        =link_to edit_user_path(current_user) do
          = icon("far", "sun", class:"btn--icon")
  .side-bar__group-list
    - current_user.groups.each do |group|
      .side-bar__group-list__contents
        = link_to "#" do
          .side-bar__group-list__contents__name
            = group.name
          .side-bar__group-list__contents__message
            メッセージはまだありません。
