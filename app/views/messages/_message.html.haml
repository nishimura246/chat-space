.message
  .upper-message
    .chat-main__message-list__contents__info
      = message.user.name
    .chat-main__message-list__contents__info__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat-main__message-list__contents__title
    - if message.content.present?
      %p.chat-main__message-list__contents__title__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?