
.chat-main
  .chat-main__group-info
    .chat-main__group-info__contents-left
      .chat-main__group-info__contents-left__summary
        = @group.name
      .chat-main__group-info__contents-left__member
        - @group.users.each do |user|
          = user.name
    .chat-main__group-info__contents-right
      .chat-main__group-info__contents-right__edit
        = link_to edit_group_path(@group) ,class: "edit__btn" do
          .chat-main__group-info__contents-right__edit__text 
            Edit

  .chat-main__message-list
    .messages
      = render @messages 
    
        
  .chat-main__message-form
    = form_for [@group, @message] do |f|
      .chat-main__message-form__contents 
        = f.text_field :content, class: 'text', placeholder: 'type a message' 
        = f.label :image, class: 'btn' do
          = icon('fas', 'camera', class: 'btn-icon')
          = f.file_field :image, class: 'hidden' 
        .chat-main__message-form__send
          = f.submit 'Send', class: 'send_btn' 